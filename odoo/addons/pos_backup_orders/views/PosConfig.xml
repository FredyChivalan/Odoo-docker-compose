<odoo>
    <data>

        <record model="ir.ui.view" id="pos_backup_orders">
            <field name="name">pos.config.backup.orders</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Backup orders">
                        <field name="backup" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
